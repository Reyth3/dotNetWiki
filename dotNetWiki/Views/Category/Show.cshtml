@model List<dotNetWiki.Models.Page>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@if(Model.Count() == 0)
{
    <p>This category doesn't exist.</p>
}
else
{
    <ul>
        @foreach(var page in Model)
        {
            <li>@Html.ActionLink(page.Name, "Show", "Page", new { id = page.Id }, null)</li>
        }
    </ul>
}
<hr />
@Html.ActionLink("Create new page", "Create", "Page")

